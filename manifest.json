{
  "manifest_version": 3,
  "minimum_chrome_version": "114",
  "name": "Job Search Assistant",
  "short_name": "JobAssistant",
  "version": "1.0.0",
  "description": "Assist with LinkedIn job search and application process within platform guidelines.",
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "browser_style": false,
    "default_title": "Job Search Assistant"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Job Search Assistant Panel"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "alarms",
    "scripting",
    "windows",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/view/*",
        "https://*.linkedin.com/jobs/collections/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "css": ["src/content/content.css"],
      "all_frames": false,
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.linkedin.com/jobs/*"
      ],
      "js": [
        "src/content/job-gatherer.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon32.png",
        "src/popup/popup.css",
        "src/sidepanel/sidepanel.css",
        "src/sidepanel/sidepanel.html",
        "src/sidepanel/sidepanel.js",
        "src/main/main.css",
        "src/main/main.html",
        "src/main/main.js",
        "src/utils/description-extractor.js",
        "assets/css/style.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
